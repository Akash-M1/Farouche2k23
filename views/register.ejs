<main class="page contact-page txt-clr">
    <section class="portfolio-block contact">
        <div class="container">
            <div class="heading">
                <h2>Register Here</h2>
            </div>
            <form action="/register?event_type=<%= route %>" method="post">
                <% if (team == "TRUE") { %>
                    <div class="mb-3"><label class="form-label" for="name">Team Name</label><input class="form-control item" name="name" type="text" id="name"></div>
                <% } else { %>
                    <div class="mb-3"><label class="form-label" for="name">Your Name</label><input class="form-control item" name="name" type="text" id="name"></div>
                <% } %>
                <div class="mb-3"><label class="form-label" for="usn">USN</label><input   class="form-control item" name="usn" type="text" id="usn"></div>
                <div class="mb-3"><label class="form-label" for="email">Email</label><input  class="form-control item" name="email" type="email" id="email" placeholder="BMSCE Email Only"></div>
                <div class="mb-3"><label class="form-label" for="phone">Phone</label><input  class="form-control item" name="phone" type="tel" id="phone"></div>
                <div class="mb-3"><label class="form-label" for="gender">Gender</label><input  class="form-control item" name="gender" type="text" id="gender"></div>
                <div class="mb-3"><label class="form-label" for="hostel">Hostel</label><input  class="form-control item" name="hostel" type="text" id="hostel"></div>
                <div class="mb-3"><label class="form-label" for="event">Event</label><input  class="form-control item" name="event" value="<%= name %>" type="text" id="message" readonly></input></div>
                <% if (team == "TRUE") { %>
                    <div class="mb-3"><label class="form-label" for="team_size">Team Size</label><input  class="form-control item" name="team_size" type="text" id="team_size" placeholder="Team Size Should Be <%= team_size %>"></div>
                    <div class="mb-3"><label class="form-label" for="team_members">Team Members Name</label><input  class="form-control item" name="team_members1" type="text" id="team_members" placeholder="names separated by comma"></div>
                <% } %>
                <div class="mb-3"><button class="btn btnclr btn-lg d-block w-100" type="submit">Register</button></div>
            </form>
        </div>
    </section>
</main>